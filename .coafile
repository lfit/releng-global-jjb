[Default]
ignore = .*/**

[GitCommit]
bears = GitCommitBear
ignore_length_regex = Signed-off-by,
    Also-by,
    Co-authored-by,
    http://,
    https://

[JSON]
bears = JSONFormatBear
files = **/*.json
indent_size = 2

[YAML]
bears = YAMLLintBear
files = **/*.yaml
document_start = True
yamllint_config = yamllint.conf

[ShellCheck]
bears = ShellCheckBear,SpaceConsistencyBear
files = **/*.sh
shell = bash
indent_size = 4
use_spaces = yeah
